# ===================================
# VistorIA - Configurações
# ===================================

# OpenAI Configuration
OPENAI_API_KEY=sua_chave_openai_aqui

# Application
APP_NAME=VistorIA
APP_VERSION=2.0.0

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true
RELOAD=true

# Database
DATABASE_URL=sqlite:///./vistoria.db

# Redis (Background Tasks)
REDIS_URL=redis://localhost:6379/0

# Tesseract OCR (ajuste conforme sua instalação)
# Linux/Mac:
TESSERACT_CMD=/usr/bin/tesseract
# Windows:
# TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe

# Upload Settings
MAX_FILE_SIZE=25000000  # 25MB
UPLOAD_DIR=static/uploads
ALLOWED_AUDIO_FORMATS=wav,mp3,m4a,ogg
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp

# PDF Configuration
PDF_OUTPUT_DIR=static/uploads
LOGO_PATH=static/images/logo.png

# IA Settings
DEFAULT_REGION=RJ
MAX_PARALLEL_ANALYSIS=5

# Security (para futuras versões)
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=*